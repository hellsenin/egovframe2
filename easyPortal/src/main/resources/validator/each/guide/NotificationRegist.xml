<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

    <formset>
		<form name="notification">
			<field property="notificationSubject" depends="required, maxlength">
        		<arg0 key="guide.notificationSubject" />
        		<arg1 key="30" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>30</var-value>
				</var>
			</field>			
			<field property="notificationContents" depends="required">
        		<arg0 key="guide.notificationContents" />
        		<arg1 key="50" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>50</var-value>
				</var>
			</field>
			<field property="notificationDate" depends="required">
        		<arg0 key="guide.notificationDate" />
			</field>
			<field property="notificationHour" depends="required">
        		<arg0 key="guide.notificationHour" />
			</field>
			<field property="notificationMinute" depends="required">
        		<arg0 key="guide.notificationMinute" />
			</field>
			<field property="interval" depends="required">
        		<arg0 key="guide.interval" />
			</field>
		</form>
    </formset>
</form-validation>